<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_anchorGravity="clip_vertical"
    tools:context=".views.DrawingBoardFragment">


    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/toolbarrectangle"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/brush_ImgBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_baseline_brush_24" />

        <ImageButton
            android:id="@+id/colors_ImgBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_baseline_color_lens_24" />

        <ImageButton
            android:id="@+id/eraser_ImgBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_baseline_draw_24" />

        <SeekBar
            android:id="@+id/penSize_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:min="5"
            android:max="30"
            android:rotation="270"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/toolbar_layout">
        <include layout="@layout/paint_view"/>

    </RelativeLayout>

</RelativeLayout>